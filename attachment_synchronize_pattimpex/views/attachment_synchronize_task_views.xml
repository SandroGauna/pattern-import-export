<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_attachment_task_form" model="ir.ui.view">
        <field name="model">attachment.synchronize.task</field>
        <field name="inherit_id" ref="attachment_synchronize.view_attachment_task_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[2]" position="after">
                <group name="pattern_import_export" string="Pattern Import/Export">
                    <field name="export_id"/>
                    <field name="domain_pattimpex_export" attrs="{'invisible': [('export_id', '=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Attachments Patterned Import Tasks Menu -->
    <record id="action_attachment_import_task_patterned" model="ir.actions.act_window">
        <field name="name">Attachments Import Tasks (Patterned)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attachment.synchronize.task</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="attachment_synchronize.view_attachment_task_search"/>
        <field name="domain">[('method_type', '=', 'import_pattern')]</field>
        <field name="context">{'default_method_type': 'import_pattern'}</field>
    </record>

    <record id="act_open_attachment_import_task_view_tree" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="attachment_synchronize.view_attachment_import_task_tree"/>
        <field name="act_window_id" ref="action_attachment_import_task_patterned"/>
    </record>

    <record id="act_open_attachment_import_task_view_form" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="attachment_synchronize.view_attachment_task_form"/>
        <field name="act_window_id" ref="action_attachment_import_task_patterned"/>
    </record>

    <menuitem id="menu_attachment_import_task_patterned"
    parent="base.next_id_9"
    sequence="23"
    action="action_attachment_import_task_patterned"/>

    <!-- Attachments Patterned Export Tasks Menu -->
    <record id="action_attachment_export_task_patterned" model="ir.actions.act_window">
        <field name="name">Attachments Export Tasks (Patterned)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attachment.synchronize.task</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="attachment_synchronize.view_attachment_task_search"/>
        <field name="domain">[('method_type', '=', 'export_pattern')]</field>
        <field name="context">{'default_method_type': 'export_pattern'}</field>
    </record>

    <record id="act_open_attachment_export_task_view_tree" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="attachment_synchronize.view_attachment_export_task_tree"/>
        <field name="act_window_id" ref="action_attachment_export_task_patterned"/>
    </record>

    <record id="act_open_attachment_export_task_view_form" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="attachment_synchronize.view_attachment_task_form"/>
        <field name="act_window_id" ref="action_attachment_export_task_patterned"/>
    </record>

    <menuitem id="menu_attachment_export_task_patterned"
    parent="base.next_id_9"
    sequence="24"
    action="action_attachment_export_task_patterned"/>


</odoo>
