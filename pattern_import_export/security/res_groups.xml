<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Exports groups -->
    <record id="group_exports_manager" model="res.groups">
        <field name="name">Exports Manager</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <function name="write" model="ir.model.data">
         <!-- get the record if from data base -->
        <function name="search" model="ir.model.data">
            <value
              eval="[('module', '=', 'base'), ('name', '=', 'group_system')]"
              />
        </function>
       <!-- remove noupdate -->
        <value eval="{'noupdate': False}" />
    </function>

    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('pattern_import_export.group_exports_manager'))]"/>
    </record>

    <function name="write" model="ir.model.data">
        <!-- get the record if from data base -->
        <function name="search" model="ir.model.data">
            <value
              eval="[('module', '=', 'base'), ('name', '=', 'group_system')]"
              />
        </function>
        <!-- reset noupdate -->
        <value eval="{'noupdate': True}" />
    </function>

</odoo>
